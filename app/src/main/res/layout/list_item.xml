<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/hall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Booking_ID"
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:text="Booking ID"
                        android:paddingRight="10dp"
                        app:layout_constraintStart_toEndOf="@id/Booking_Purpose"
                        app:layout_constraintTop_toBottomOf="@id/Booking_Details"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/booking_date"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"


                        android:layout_marginTop="28dp"
                        android:paddingLeft="10dp"
                        android:text="Booking Date"
                        app:layout_constraintBottom_toTopOf="@+id/Booking_Purpose"
                        app:layout_constraintEnd_toStartOf="@+id/Booking_Details"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.838" />

                    <TextView
                        android:id="@+id/Booking_Details"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text="Booking_Details"
                        android:layout_marginTop="28dp"
                        app:layout_constraintBottom_toTopOf="@+id/Booking_ID"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.888"
                        android:paddingRight="10dp"
                        app:layout_constraintStart_toEndOf="@id/booking_date"
                        />

                    <TextView
                        android:id="@+id/Booking_Purpose"
                        android:layout_width="126dp"
                        android:layout_height="32dp"
                        android:paddingLeft="10dp"
                        android:text="Booking_Purpose"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/Booking_ID"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/booking_date" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </LinearLayout>





</androidx.cardview.widget.CardView>
