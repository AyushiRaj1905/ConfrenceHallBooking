<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary"
        android:text="Details of Booking"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <!-- Conference Room -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conference Room"/>

        <Spinner
            android:id="@+id/spinnerHallIds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- Mandatory Booking -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_error"
        android:text="Mandatory Booking"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <!-- Booking Person's Detail -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/design_default_color_primary"
        android:text="Booking Person's Detail"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <!-- Employee No and Employee Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee No:"
            android:textColor="@color/design_default_color_primary"/>

        <EditText
            android:id="@+id/editTextTextEmployeeId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Employee No"
            android:inputType="textPersonName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Name"
            android:textColor="@color/design_default_color_primary"/>

        <EditText
            android:id="@+id/edit_text_employee_name"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Employee Name"
            android:inputType="textPersonName"/>
    </LinearLayout>

    <!-- Employee Desg and Employee Dept -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Desg:"
            android:textColor="@color/design_default_color_primary"/>

        <EditText
            android:id="@+id/edit_text_employe_desg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Employee Desg"
            android:inputType="textPersonName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Dept"
            android:textColor="@color/design_default_color_primary"/>

        <EditText
            android:id="@+id/edit_text_employee_dept"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Employee Dept"
            android:inputType="textPersonName"/>
    </LinearLayout>

    <!-- Booking Details -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary"
        android:text="Booking Details"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <!-- Booking Date and Booking Day -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Date"
            android:textColor="@color/design_default_color_error"/>

        <EditText
            android:id="@+id/booking_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Select Date"
            android:inputType="textPersonName"/>

    </LinearLayout>

    <!-- Booking Period and Participant Count -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Period"
            android:textColor="@android:color/holo_red_dark"/>

        <EditText
            android:id="@+id/edit_text_booking_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"/>


        <EditText
            android:id="@+id/edit_text_participants_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter number of participant"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- Booking From and Booking To -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking From"
            android:textColor="@android:color/holo_red_dark"/>

        <EditText
            android:id="@+id/edit_text_booking_from_hrs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Enter Start Time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking To"
            android:textColor="@android:color/holo_red_dark"/>

        <EditText
            android:id="@+id/hrs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Enter End Time"/>
    </LinearLayout>

    <!-- Booking Purpose -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Purpose"
            android:textColor="@android:color/holo_red_dark"/>

        <EditText
            android:id="@+id/bp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- Booking Details -->
    <EditText
        android:id="@+id/edit_text_booking_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Booking Details"
        android:layout_marginTop="8dp"/>



    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_theme"
        android:text="Submit"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_marginTop="16dp"/>
</LinearLayout>
