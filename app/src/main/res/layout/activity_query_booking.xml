<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QueryBooking">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="399dp"
        android:layout_height="51dp"
        android:layout_margin="4dp"
        android:background="@color/app_theme"
        android:text="Query Your Room Details"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="73dp"
        android:layout_height="34dp"

        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:text="From Date"
        android:textColor="@color/design_default_color_error"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/From_date"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView19"
        app:layout_constraintBottom_toTopOf="@id/textView22"
        />


    <EditText
        android:id="@+id/From_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:drawableRight="@android:drawable/ic_menu_my_calendar"
        android:hint="select date"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textView19"
        app:layout_constraintStart_toEndOf="@id/textView21"
        tools:layout_editor_absoluteX="95dp"
        app:layout_constraintBottom_toTopOf="@id/textView22"
        app:layout_constraintEnd_toStartOf="@id/textView23"
        />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Conference Room"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="122dp"
        app:layout_constraintBottom_toTopOf="@id/textView26"
        app:layout_constraintTop_toBottomOf="@id/textView21"
        app:layout_constraintEnd_toStartOf="@id/textView24"
        />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Date"
        android:textColor="@color/design_default_color_error"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="64dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toEndOf="@id/From_date"
        app:layout_constraintTop_toBottomOf="@id/textView19"
        app:layout_constraintBottom_toTopOf="@id/textView24"
        app:layout_constraintEnd_toStartOf="@id/To_date"/>

    <EditText
        android:id="@+id/To_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_menu_my_calendar"
        android:hint="select date"
        android:inputType="textPersonName"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="45dp"
        app:layout_constraintBottom_toTopOf="@id/textView24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView19"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toEndOf="@id/textView23"
        />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Status"
        android:textColor="@color/design_default_color_error"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="122dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/To_date"
        app:layout_constraintBottom_toTopOf="@id/textView26"
        app:layout_constraintStart_toEndOf="@id/textView22"
        />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="430dp"
        android:layout_height="24dp"
        android:layout_margin="3.5dp"

        android:background="@color/design_default_color_primary"
        android:text="Query Booking
"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24"
        app:layout_constraintVertical_bias="0.005"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="409dp"
        android:layout_height="717dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="173dp"
        android:id="@+id/recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView26"

        />


</androidx.constraintlayout.widget.ConstraintLayout>

